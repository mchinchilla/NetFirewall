@page "/firewall/filter-rules"
@rendermode InteractiveServer

<PageTitle>Filter Rules - NetFirewall</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">Filter Rules</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">Manage firewall filter rules for input, forward, and output chains</p>
        </div>
        <button @onclick="ShowAddModal" class="btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Rule
        </button>
    </div>

    <!-- Chain Tabs -->
    <div class="border-b border-gray-200 dark:border-gray-700">
        <nav class="-mb-px flex space-x-8">
            @foreach (var chain in new[] { "input", "forward", "output" })
            {
                <button @onclick="() => _selectedChain = chain"
                        class="@(_selectedChain == chain
                            ? "border-primary-500 text-primary-600 dark:text-primary-400"
                            : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300")
                            whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm capitalize">
                    @chain Chain
                    <span class="ml-2 px-2 py-0.5 rounded-full text-xs @(_selectedChain == chain
                        ? "bg-primary-100 text-primary-600 dark:bg-primary-900 dark:text-primary-400"
                        : "bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400")">
                        @_rules.Count(r => r.Chain == chain)
                    </span>
                </button>
            }
        </nav>
    </div>

    <!-- Rules Table -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th class="w-12">#</th>
                        <th>Description</th>
                        <th>Action</th>
                        <th>Protocol</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Ports</th>
                        <th>State</th>
                        <th class="w-24">Enabled</th>
                        <th class="w-32">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rule in _rules.Where(r => r.Chain == _selectedChain).OrderBy(r => r.Priority))
                    {
                        <tr>
                            <td class="text-gray-500">@rule.Priority</td>
                            <td>
                                <span class="font-medium text-gray-900 dark:text-white">@rule.Description</span>
                            </td>
                            <td>
                                <span class="badge @GetActionBadgeClass(rule.Action)">@rule.Action</span>
                            </td>
                            <td class="font-mono text-sm">@(rule.Protocol ?? "any")</td>
                            <td class="font-mono text-sm">@(rule.SourceAddresses?.FirstOrDefault() ?? "any")</td>
                            <td class="font-mono text-sm">@(rule.DestinationAddresses?.FirstOrDefault() ?? "any")</td>
                            <td class="font-mono text-sm">@(rule.DestinationPorts != null ? string.Join(", ", rule.DestinationPorts) : "any")</td>
                            <td class="text-sm">@(rule.ConnectionState != null ? string.Join(", ", rule.ConnectionState) : "-")</td>
                            <td>
                                <button class="toggle @(rule.Enabled ? "toggle-enabled" : "toggle-disabled")" @onclick="() => ToggleRule(rule)">
                                    <span class="toggle-knob @(rule.Enabled ? "translate-x-5" : "translate-x-0")"></span>
                                </button>
                            </td>
                            <td>
                                <div class="flex items-center gap-2">
                                    <button class="btn-icon text-gray-400 hover:text-gray-600" title="Move Up">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                                        </svg>
                                    </button>
                                    <button class="btn-icon text-gray-400 hover:text-gray-600" title="Move Down">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                        </svg>
                                    </button>
                                    <button class="btn-icon text-blue-400 hover:text-blue-600" title="Edit">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </button>
                                    <button class="btn-icon text-red-400 hover:text-red-600" title="Delete">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Info Card -->
    <div class="card bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
        <div class="card-body">
            <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-blue-600 dark:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                    <h3 class="font-medium text-blue-900 dark:text-blue-200">Rule Evaluation Order</h3>
                    <p class="text-sm text-blue-700 dark:text-blue-300 mt-1">
                        Rules are evaluated from lowest to highest priority number. The first matching rule is applied.
                        Default policy is DROP for unmatched traffic.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string _selectedChain = "input";

    // TODO: Implement add/edit modal
    private void ShowAddModal() { }

    private List<FilterRuleModel> _rules = new()
    {
        new() { Chain = "input", Description = "Allow established/related connections", Action = "accept", Protocol = null, ConnectionState = new[] { "established", "related" }, Priority = 10, Enabled = true },
        new() { Chain = "input", Description = "Allow DHCP on LAN", Action = "accept", Protocol = "udp", DestinationPorts = new[] { "67", "68" }, Priority = 20, Enabled = true },
        new() { Chain = "input", Description = "Allow ICMP ping", Action = "accept", Protocol = "icmp", Priority = 50, Enabled = true },
        new() { Chain = "input", Description = "Allow SSH", Action = "accept", Protocol = "tcp", DestinationPorts = new[] { "22" }, ConnectionState = new[] { "new" }, Priority = 100, Enabled = true },
        new() { Chain = "input", Description = "Drop all other input", Action = "drop", Protocol = null, Priority = 1000, Enabled = true },
        new() { Chain = "forward", Description = "Allow established/related connections", Action = "accept", Protocol = null, ConnectionState = new[] { "established", "related" }, Priority = 10, Enabled = true },
        new() { Chain = "forward", Description = "Allow LAN to WAN", Action = "accept", Protocol = null, SourceAddresses = new[] { "192.168.99.0/24" }, Priority = 100, Enabled = true },
        new() { Chain = "forward", Description = "Drop all other forward", Action = "drop", Protocol = null, Priority = 1000, Enabled = true }
    };

    private void ToggleRule(FilterRuleModel rule)
    {
        rule.Enabled = !rule.Enabled;
    }

    private string GetActionBadgeClass(string action) => action.ToLower() switch
    {
        "accept" => "badge-success",
        "drop" => "badge-danger",
        "reject" => "badge-warning",
        "log" => "badge-info",
        _ => "badge-info"
    };

    private class FilterRuleModel
    {
        public Guid Id { get; set; } = Guid.NewGuid();
        public string Chain { get; set; } = "";
        public string Description { get; set; } = "";
        public string Action { get; set; } = "";
        public string? Protocol { get; set; }
        public string[]? SourceAddresses { get; set; }
        public string[]? DestinationAddresses { get; set; }
        public string[]? DestinationPorts { get; set; }
        public string[]? ConnectionState { get; set; }
        public int Priority { get; set; }
        public bool Enabled { get; set; }
    }
}
