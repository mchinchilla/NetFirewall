@page "/dhcp/leases"
@rendermode InteractiveServer
@using System.Net
@using System.Net.NetworkInformation
@using NetFirewall.Models.Dhcp
@using NetFirewall.Services.Dhcp
@inject IDhcpAdminService DhcpService
@inject NavigationManager NavigationManager

<PageTitle>DHCP Leases - NetFirewall</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">DHCP Leases</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">View active and expired DHCP leases</p>
        </div>
        <div class="flex gap-3">
            <button class="btn-secondary" @onclick="CleanupExpiredLeases">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Cleanup Expired
            </button>
            <button class="btn-secondary" @onclick="RefreshLeases">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Refresh
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <div class="flex items-center gap-2 text-red-700 dark:text-red-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>@_errorMessage</span>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
            <div class="flex items-center gap-2 text-green-700 dark:text-green-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>@_successMessage</span>
            </div>
        </div>
    }

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="stat-card">
            <p class="stat-label">Active Leases</p>
            <p class="stat-value text-green-600">@_stats.ActiveLeases</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Total Pool Size</p>
            <p class="stat-value">@_stats.TotalPoolSize</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Available IPs</p>
            <p class="stat-value">@_stats.AvailableIps</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Reservations</p>
            <p class="stat-value">@_stats.TotalReservations</p>
        </div>
    </div>

    <!-- Filter -->
    <div class="card">
        <div class="card-body py-3">
            <div class="flex items-center gap-4">
                <div class="flex-1">
                    <input type="text" class="form-input" placeholder="Search by MAC, IP, or hostname..." @bind="_searchTerm" @bind:event="oninput" />
                </div>
                <div class="flex items-center gap-2">
                    <label class="text-sm text-gray-600 dark:text-gray-400">Show:</label>
                    <select class="form-select w-auto" @bind="_filterStatus">
                        <option value="all">All Leases</option>
                        <option value="active">Active Only</option>
                        <option value="expired">Expired Only</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Leases Table -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>MAC Address</th>
                        <th>IP Address</th>
                        <th>Hostname</th>
                        <th>Lease Start</th>
                        <th>Lease End</th>
                        <th>Time Remaining</th>
                        <th>Status</th>
                        <th class="w-24">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lease in FilteredLeases)
                    {
                        var isActive = IsActive(lease);
                        var isReserved = IsReserved(lease);
                        <tr>
                            <td class="font-mono text-sm">@FormatMac(lease.MacAddress)</td>
                            <td class="font-mono text-sm">@lease.IpAddress</td>
                            <td>@(lease.Hostname ?? "-")</td>
                            <td class="text-sm">@lease.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-sm">@lease.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-sm">
                                @if (isActive)
                                {
                                    var remaining = lease.EndTime - DateTime.UtcNow;
                                    @($"{(int)remaining.TotalHours}h {remaining.Minutes}m")
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                            <td>
                                <div class="flex items-center gap-1">
                                    @if (isActive)
                                    {
                                        var remaining = lease.EndTime - DateTime.UtcNow;
                                        if (remaining.TotalHours < 1)
                                        {
                                            <span class="badge-warning">Expiring</span>
                                        }
                                        else
                                        {
                                            <span class="badge-success">Active</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge-danger">Expired</span>
                                    }
                                    @if (isReserved)
                                    {
                                        <span class="badge-info">Reserved</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="flex items-center gap-2">
                                    @if (!isReserved)
                                    {
                                        <button class="btn-icon text-blue-400 hover:text-blue-600" title="Make Reservation" @onclick="() => ShowMakeReservationModal(lease)">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                                            </svg>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-icon text-gray-400 cursor-not-allowed" title="Already Reserved" disabled>
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                                            </svg>
                                        </button>
                                    }
                                    <button class="btn-icon text-red-400 hover:text-red-600" title="Release Lease" @onclick="() => ReleaseLease(lease)">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!FilteredLeases.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-8 text-gray-500 dark:text-gray-400">
                                No leases found matching your criteria.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Make Reservation Modal *@
@if (_showReservationModal)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 animate-fade-in">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4 overflow-hidden">
            <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-750">
                <h3 class="text-lg font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">
                    Create Reservation from Lease
                </h3>
            </div>
            <div class="px-6 py-5 space-y-5">
                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
                    <p class="text-sm text-blue-700 dark:text-blue-300">
                        This will create a static IP reservation for this device. The same IP address will be assigned every time this device connects.
                    </p>
                </div>
                <div>
                    <label class="form-label">MAC Address</label>
                    <input type="text" class="form-input font-mono bg-gray-50 dark:bg-gray-700" @bind="_reservationMac" readonly />
                </div>
                <div>
                    <label class="form-label">IP Address</label>
                    <input type="text" class="form-input font-mono" @bind="_reservationIp" placeholder="192.168.99.10" />
                </div>
                <div>
                    <label class="form-label">Description</label>
                    <input type="text" class="form-input" @bind="_reservationDescription" placeholder="Device name or description" />
                </div>
            </div>
            <div class="px-6 py-4 border-t border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800/50 flex justify-end gap-3">
                <button class="btn-secondary" @onclick="() => _showReservationModal = false">Cancel</button>
                <button class="btn-primary" @onclick="CreateReservation">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                    </svg>
                    Create Reservation
                </button>
            </div>
        </div>
    </div>
}

@code {
    private string _searchTerm = "";
    private string _filterStatus = "all";
    private IReadOnlyList<DhcpLease> _leases = [];
    private IReadOnlyList<DhcpMacReservation> _reservations = [];
    private DhcpStats _stats = new();

    private string? _errorMessage;
    private string? _successMessage;

    // Reservation Modal
    private bool _showReservationModal = false;
    private string _reservationMac = "";
    private string _reservationIp = "";
    private string _reservationDescription = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadLeasesAsync();
    }

    private IEnumerable<DhcpLease> FilteredLeases => _leases
        .Where(l => _filterStatus == "all" ||
                    (_filterStatus == "active" && IsActive(l)) ||
                    (_filterStatus == "expired" && !IsActive(l)))
        .Where(l => string.IsNullOrEmpty(_searchTerm) ||
                    l.MacAddress.ToString().Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    FormatMac(l.MacAddress).Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    l.IpAddress.ToString().Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (l.Hostname?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
        .OrderByDescending(l => IsActive(l))
        .ThenByDescending(l => l.StartTime);

    private static bool IsActive(DhcpLease lease) => lease.EndTime > DateTime.UtcNow;

    private bool IsReserved(DhcpLease lease)
    {
        return _reservations.Any(r => r.MacAddress.Equals(lease.MacAddress));
    }

    private async Task LoadLeasesAsync()
    {
        try
        {
            var leasesTask = DhcpService.GetAllLeasesAsync(includeExpired: true);
            var statsTask = DhcpService.GetStatsAsync();
            var reservationsTask = DhcpService.GetReservationsAsync();

            await Task.WhenAll(leasesTask, statsTask, reservationsTask);

            _leases = await leasesTask;
            _stats = await statsTask;
            _reservations = await reservationsTask;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading leases: {ex.Message}";
        }
    }

    private async Task RefreshLeases()
    {
        ClearMessages();
        await LoadLeasesAsync();
        _successMessage = "Leases refreshed successfully";
    }

    private async Task ReleaseLease(DhcpLease lease)
    {
        try
        {
            ClearMessages();
            await DhcpService.ReleaseLeaseAsync(lease.Id);
            _successMessage = $"Lease for {FormatMac(lease.MacAddress)} released successfully";
            await LoadLeasesAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error releasing lease: {ex.Message}";
        }
    }

    private async Task CleanupExpiredLeases()
    {
        try
        {
            ClearMessages();
            var count = await DhcpService.CleanupExpiredLeasesAsync();
            _successMessage = $"Cleaned up {count} expired lease(s)";
            await LoadLeasesAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error cleaning up leases: {ex.Message}";
        }
    }

    private void ShowMakeReservationModal(DhcpLease lease)
    {
        _reservationMac = FormatMac(lease.MacAddress);
        _reservationIp = lease.IpAddress.ToString();
        _reservationDescription = lease.Hostname ?? "";
        _showReservationModal = true;
        ClearMessages();
    }

    private async Task CreateReservation()
    {
        try
        {
            var mac = PhysicalAddress.Parse(_reservationMac.Replace(":", "-"));
            var ip = IPAddress.Parse(_reservationIp);

            await DhcpService.CreateReservationAsync(new DhcpMacReservation
            {
                MacAddress = mac,
                ReservedIp = ip,
                Description = string.IsNullOrWhiteSpace(_reservationDescription) ? null : _reservationDescription
            });

            _showReservationModal = false;
            _successMessage = $"Reservation created for {_reservationMac} -> {_reservationIp}";
            await LoadLeasesAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error creating reservation: {ex.Message}";
        }
    }

    private void ClearMessages()
    {
        _errorMessage = null;
        _successMessage = null;
    }

    private static string FormatMac(PhysicalAddress mac)
    {
        var bytes = mac.GetAddressBytes();
        return string.Join(":", bytes.Select(b => b.ToString("X2")));
    }
}
