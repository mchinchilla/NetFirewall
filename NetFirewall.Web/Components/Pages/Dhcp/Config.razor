@page "/dhcp/config"
@rendermode InteractiveServer
@using System.Net
@using NetFirewall.Models.Dhcp
@using NetFirewall.Services.Dhcp
@inject IDhcpAdminService DhcpService

<PageTitle>DHCP Configuration - NetFirewall</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">DHCP Server Configuration</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">Configure DHCP subnets and IP pools</p>
        </div>
        <button class="btn-primary" @onclick="ShowAddSubnetModal">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Subnet
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <div class="flex items-center gap-2 text-red-700 dark:text-red-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>@_errorMessage</span>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
            <div class="flex items-center gap-2 text-green-700 dark:text-green-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>@_successMessage</span>
            </div>
        </div>
    }

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="stat-card">
            <p class="stat-label">Total Subnets</p>
            <p class="stat-value">@_subnets.Count</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Active Subnets</p>
            <p class="stat-value text-green-600">@_subnets.Count(s => s.Enabled)</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Total Pools</p>
            <p class="stat-value">@_pools.Count</p>
        </div>
        <div class="stat-card">
            <p class="stat-label">Pool Size</p>
            <p class="stat-value">@_stats.TotalPoolSize IPs</p>
        </div>
    </div>

    <!-- Subnets List -->
    @foreach (var subnet in _subnets)
    {
        var subnetPools = _pools.Where(p => p.SubnetId == subnet.Id).ToList();
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 @(subnet.Enabled ? "bg-green-100 dark:bg-green-900" : "bg-gray-100 dark:bg-gray-700") rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 @(subnet.Enabled ? "text-green-600 dark:text-green-400" : "text-gray-500")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">@subnet.Name</h2>
                        <p class="text-sm text-gray-500 dark:text-gray-400 font-mono">@subnet.Network</p>
                    </div>
                    @if (subnet.Enabled)
                    {
                        <span class="badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge-danger">Disabled</span>
                    }
                </div>
                <div class="flex items-center gap-2">
                    <button class="btn-secondary text-sm" @onclick="() => ShowAddPoolModal(subnet)">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Pool
                    </button>
                    <button class="btn-icon text-blue-400 hover:text-blue-600" title="Edit Subnet" @onclick="() => ShowEditSubnetModal(subnet)">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                    </button>
                    <button class="btn-icon text-red-400 hover:text-red-600" title="Delete Subnet" @onclick="() => DeleteSubnet(subnet)">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4 text-sm">
                    <div>
                        <span class="text-gray-500 dark:text-gray-400">Gateway:</span>
                        <span class="ml-2 font-mono text-gray-900 dark:text-white">@(subnet.Router?.ToString() ?? "-")</span>
                    </div>
                    <div>
                        <span class="text-gray-500 dark:text-gray-400">DNS:</span>
                        <span class="ml-2 font-mono text-gray-900 dark:text-white">@(subnet.DnsServers != null ? string.Join(", ", subnet.DnsServers.Select(d => d.ToString())) : "-")</span>
                    </div>
                    <div>
                        <span class="text-gray-500 dark:text-gray-400">Lease Time:</span>
                        <span class="ml-2 text-gray-900 dark:text-white">@FormatLeaseTime(subnet.DefaultLeaseTime)</span>
                    </div>
                    <div>
                        <span class="text-gray-500 dark:text-gray-400">Interface:</span>
                        <span class="ml-2 font-mono text-gray-900 dark:text-white">@(subnet.InterfaceName ?? "-")</span>
                    </div>
                </div>

                @if (subnetPools.Any())
                {
                    <div class="border-t border-gray-100 dark:border-gray-700 pt-4">
                        <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">IP Pools</h4>
                        <div class="overflow-x-auto">
                            <table class="table text-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Range Start</th>
                                        <th>Range End</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th class="w-24">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pool in subnetPools.OrderBy(p => p.Priority))
                                    {
                                        <tr>
                                            <td>@(pool.Name ?? "Default")</td>
                                            <td class="font-mono">@pool.RangeStart</td>
                                            <td class="font-mono">@pool.RangeEnd</td>
                                            <td>@pool.Priority</td>
                                            <td>
                                                @if (pool.Enabled)
                                                {
                                                    <span class="badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge-danger">Disabled</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="flex items-center gap-2">
                                                    <button class="btn-icon text-blue-400 hover:text-blue-600" title="Edit Pool" @onclick="() => ShowEditPoolModal(pool)">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                        </svg>
                                                    </button>
                                                    <button class="btn-icon text-red-400 hover:text-red-600" title="Delete Pool" @onclick="() => DeletePool(pool)">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="border-t border-gray-100 dark:border-gray-700 pt-4">
                        <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">No IP pools configured. Add a pool to start serving DHCP requests.</p>
                    </div>
                }
            </div>
        </div>
    }

    @if (!_subnets.Any())
    {
        <div class="card">
            <div class="card-body text-center py-12">
                <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Subnets Configured</h3>
                <p class="text-gray-500 dark:text-gray-400 mb-4">Create a subnet to start configuring your DHCP server.</p>
                <button class="btn-primary" @onclick="ShowAddSubnetModal">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add First Subnet
                </button>
            </div>
        </div>
    }
</div>

@* Subnet Modal *@
@if (_showSubnetModal)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 animate-fade-in">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-2xl mx-4 overflow-hidden max-h-[90vh] overflow-y-auto">
            <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-750">
                <h3 class="text-lg font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">
                    @(_editSubnetId.HasValue ? "Edit Subnet" : "Add Subnet")
                </h3>
            </div>
            <div class="px-6 py-5 space-y-5">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Subnet Name</label>
                        <input type="text" class="form-input" @bind="_subnetForm.Name" placeholder="LAN Subnet" />
                    </div>
                    <div>
                        <label class="form-label">Network (CIDR)</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.Network" placeholder="192.168.1.0/24" />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Subnet Mask</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.SubnetMask" placeholder="255.255.255.0" />
                    </div>
                    <div>
                        <label class="form-label">Gateway (Router)</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.Router" placeholder="192.168.1.1" />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Primary DNS</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.Dns1" placeholder="1.1.1.1" />
                    </div>
                    <div>
                        <label class="form-label">Secondary DNS</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.Dns2" placeholder="8.8.8.8" />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Default Lease Time (seconds)</label>
                        <input type="number" class="form-input" @bind="_subnetForm.DefaultLeaseTime" />
                        <p class="text-xs text-gray-500 mt-1">Default: 86400 (24 hours)</p>
                    </div>
                    <div>
                        <label class="form-label">Max Lease Time (seconds)</label>
                        <input type="number" class="form-input" @bind="_subnetForm.MaxLeaseTime" />
                        <p class="text-xs text-gray-500 mt-1">Default: 604800 (7 days)</p>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Domain Name (optional)</label>
                        <input type="text" class="form-input" @bind="_subnetForm.DomainName" placeholder="local.lan" />
                    </div>
                    <div>
                        <label class="form-label">Interface (optional)</label>
                        <input type="text" class="form-input font-mono" @bind="_subnetForm.InterfaceName" placeholder="eth0" />
                    </div>
                </div>

                <div class="border-t border-gray-100 dark:border-gray-700 pt-4">
                    <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">PXE Boot Configuration</h4>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="form-label">TFTP Server</label>
                            <input type="text" class="form-input font-mono" @bind="_subnetForm.TftpServer" placeholder="192.168.1.1" />
                        </div>
                        <div>
                            <label class="form-label">Boot Filename (BIOS)</label>
                            <input type="text" class="form-input" @bind="_subnetForm.BootFilename" placeholder="pxelinux.0" />
                        </div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label">Boot Filename (UEFI)</label>
                        <input type="text" class="form-input" @bind="_subnetForm.BootFilenameUefi" placeholder="shimx64.efi" />
                    </div>
                </div>

                <div class="flex items-center gap-3">
                    <input type="checkbox" class="form-checkbox" id="subnetEnabled" @bind="_subnetForm.Enabled" />
                    <label for="subnetEnabled" class="text-sm text-gray-700 dark:text-gray-300">Enable Subnet</label>
                </div>
            </div>
            <div class="px-6 py-4 border-t border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800/50 flex justify-end gap-3">
                <button class="btn-secondary" @onclick="() => _showSubnetModal = false">Cancel</button>
                <button class="btn-primary" @onclick="SaveSubnet">Save</button>
            </div>
        </div>
    </div>
}

@* Pool Modal *@
@if (_showPoolModal)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 animate-fade-in">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4 overflow-hidden">
            <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-750">
                <h3 class="text-lg font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">
                    @(_editPoolId.HasValue ? "Edit Pool" : "Add Pool")
                </h3>
            </div>
            <div class="px-6 py-5 space-y-5">
                <div>
                    <label class="form-label">Pool Name (optional)</label>
                    <input type="text" class="form-input" @bind="_poolForm.Name" placeholder="Default Pool" />
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Range Start</label>
                        <input type="text" class="form-input font-mono" @bind="_poolForm.RangeStart" placeholder="192.168.1.100" />
                    </div>
                    <div>
                        <label class="form-label">Range End</label>
                        <input type="text" class="form-input font-mono" @bind="_poolForm.RangeEnd" placeholder="192.168.1.199" />
                    </div>
                </div>

                <div>
                    <label class="form-label">Priority</label>
                    <input type="number" class="form-input" @bind="_poolForm.Priority" />
                    <p class="text-xs text-gray-500 mt-1">Lower value = higher priority</p>
                </div>

                <div class="space-y-3">
                    <div class="flex items-center gap-3">
                        <input type="checkbox" class="form-checkbox" id="poolAllowUnknown" @bind="_poolForm.AllowUnknownClients" />
                        <label for="poolAllowUnknown" class="text-sm text-gray-700 dark:text-gray-300">Allow unknown clients</label>
                    </div>
                    <div class="flex items-center gap-3">
                        <input type="checkbox" class="form-checkbox" id="poolKnownOnly" @bind="_poolForm.KnownClientsOnly" />
                        <label for="poolKnownOnly" class="text-sm text-gray-700 dark:text-gray-300">Known clients only</label>
                    </div>
                    <div class="flex items-center gap-3">
                        <input type="checkbox" class="form-checkbox" id="poolEnabled" @bind="_poolForm.Enabled" />
                        <label for="poolEnabled" class="text-sm text-gray-700 dark:text-gray-300">Enable Pool</label>
                    </div>
                </div>
            </div>
            <div class="px-6 py-4 border-t border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800/50 flex justify-end gap-3">
                <button class="btn-secondary" @onclick="() => _showPoolModal = false">Cancel</button>
                <button class="btn-primary" @onclick="SavePool">Save</button>
            </div>
        </div>
    </div>
}

@code {
    private IReadOnlyList<DhcpSubnet> _subnets = [];
    private IReadOnlyList<DhcpPool> _pools = [];
    private DhcpStats _stats = new();

    private string? _errorMessage;
    private string? _successMessage;

    // Subnet Modal
    private bool _showSubnetModal = false;
    private Guid? _editSubnetId = null;
    private SubnetFormModel _subnetForm = new();

    // Pool Modal
    private bool _showPoolModal = false;
    private Guid? _editPoolId = null;
    private Guid? _poolSubnetId = null;
    private PoolFormModel _poolForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            var subnetsTask = DhcpService.GetSubnetsAsync();
            var poolsTask = DhcpService.GetPoolsAsync();
            var statsTask = DhcpService.GetStatsAsync();

            await Task.WhenAll(subnetsTask, poolsTask, statsTask);

            _subnets = await subnetsTask;
            _pools = await poolsTask;
            _stats = await statsTask;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading data: {ex.Message}";
        }
    }

    private void ShowAddSubnetModal()
    {
        _editSubnetId = null;
        _subnetForm = new SubnetFormModel
        {
            DefaultLeaseTime = 86400,
            MaxLeaseTime = 604800,
            Enabled = true
        };
        _showSubnetModal = true;
        ClearMessages();
    }

    private void ShowEditSubnetModal(DhcpSubnet subnet)
    {
        _editSubnetId = subnet.Id;
        _subnetForm = new SubnetFormModel
        {
            Name = subnet.Name,
            Network = subnet.Network,
            SubnetMask = subnet.SubnetMask?.ToString() ?? "",
            Router = subnet.Router?.ToString() ?? "",
            Dns1 = subnet.DnsServers?.Length > 0 ? subnet.DnsServers[0].ToString() : "",
            Dns2 = subnet.DnsServers?.Length > 1 ? subnet.DnsServers[1].ToString() : "",
            DefaultLeaseTime = subnet.DefaultLeaseTime,
            MaxLeaseTime = subnet.MaxLeaseTime,
            DomainName = subnet.DomainName ?? "",
            InterfaceName = subnet.InterfaceName ?? "",
            TftpServer = subnet.TftpServer ?? "",
            BootFilename = subnet.BootFilename ?? "",
            BootFilenameUefi = subnet.BootFilenameUefi ?? "",
            Enabled = subnet.Enabled
        };
        _showSubnetModal = true;
        ClearMessages();
    }

    private async Task SaveSubnet()
    {
        try
        {
            var dnsServers = new List<IPAddress>();
            if (!string.IsNullOrWhiteSpace(_subnetForm.Dns1) && IPAddress.TryParse(_subnetForm.Dns1, out var dns1))
                dnsServers.Add(dns1);
            if (!string.IsNullOrWhiteSpace(_subnetForm.Dns2) && IPAddress.TryParse(_subnetForm.Dns2, out var dns2))
                dnsServers.Add(dns2);

            var subnet = new DhcpSubnet
            {
                Name = _subnetForm.Name,
                Network = _subnetForm.Network,
                SubnetMask = string.IsNullOrWhiteSpace(_subnetForm.SubnetMask) ? null : IPAddress.Parse(_subnetForm.SubnetMask),
                Router = string.IsNullOrWhiteSpace(_subnetForm.Router) ? null : IPAddress.Parse(_subnetForm.Router),
                DnsServers = dnsServers.Count > 0 ? dnsServers.ToArray() : null,
                DefaultLeaseTime = _subnetForm.DefaultLeaseTime,
                MaxLeaseTime = _subnetForm.MaxLeaseTime,
                DomainName = string.IsNullOrWhiteSpace(_subnetForm.DomainName) ? null : _subnetForm.DomainName,
                InterfaceName = string.IsNullOrWhiteSpace(_subnetForm.InterfaceName) ? null : _subnetForm.InterfaceName,
                TftpServer = string.IsNullOrWhiteSpace(_subnetForm.TftpServer) ? null : _subnetForm.TftpServer,
                BootFilename = string.IsNullOrWhiteSpace(_subnetForm.BootFilename) ? null : _subnetForm.BootFilename,
                BootFilenameUefi = string.IsNullOrWhiteSpace(_subnetForm.BootFilenameUefi) ? null : _subnetForm.BootFilenameUefi,
                Enabled = _subnetForm.Enabled
            };

            if (_editSubnetId.HasValue)
            {
                subnet.Id = _editSubnetId.Value;
                await DhcpService.UpdateSubnetAsync(subnet);
                _successMessage = "Subnet updated successfully";
            }
            else
            {
                await DhcpService.CreateSubnetAsync(subnet);
                _successMessage = "Subnet created successfully";
            }

            _showSubnetModal = false;
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error saving subnet: {ex.Message}";
        }
    }

    private async Task DeleteSubnet(DhcpSubnet subnet)
    {
        try
        {
            ClearMessages();
            await DhcpService.DeleteSubnetAsync(subnet.Id);
            _successMessage = $"Subnet '{subnet.Name}' deleted successfully";
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error deleting subnet: {ex.Message}";
        }
    }

    private void ShowAddPoolModal(DhcpSubnet subnet)
    {
        _editPoolId = null;
        _poolSubnetId = subnet.Id;
        _poolForm = new PoolFormModel
        {
            Priority = 100,
            AllowUnknownClients = true,
            Enabled = true
        };
        _showPoolModal = true;
        ClearMessages();
    }

    private void ShowEditPoolModal(DhcpPool pool)
    {
        _editPoolId = pool.Id;
        _poolSubnetId = pool.SubnetId;
        _poolForm = new PoolFormModel
        {
            Name = pool.Name ?? "",
            RangeStart = pool.RangeStart.ToString(),
            RangeEnd = pool.RangeEnd.ToString(),
            Priority = pool.Priority,
            AllowUnknownClients = pool.AllowUnknownClients,
            KnownClientsOnly = pool.KnownClientsOnly,
            Enabled = pool.Enabled
        };
        _showPoolModal = true;
        ClearMessages();
    }

    private async Task SavePool()
    {
        try
        {
            var pool = new DhcpPool
            {
                SubnetId = _poolSubnetId,
                Name = string.IsNullOrWhiteSpace(_poolForm.Name) ? null : _poolForm.Name,
                RangeStart = IPAddress.Parse(_poolForm.RangeStart),
                RangeEnd = IPAddress.Parse(_poolForm.RangeEnd),
                Priority = _poolForm.Priority,
                AllowUnknownClients = _poolForm.AllowUnknownClients,
                KnownClientsOnly = _poolForm.KnownClientsOnly,
                Enabled = _poolForm.Enabled
            };

            if (_editPoolId.HasValue)
            {
                pool.Id = _editPoolId.Value;
                await DhcpService.UpdatePoolAsync(pool);
                _successMessage = "Pool updated successfully";
            }
            else
            {
                await DhcpService.CreatePoolAsync(pool);
                _successMessage = "Pool created successfully";
            }

            _showPoolModal = false;
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error saving pool: {ex.Message}";
        }
    }

    private async Task DeletePool(DhcpPool pool)
    {
        try
        {
            ClearMessages();
            await DhcpService.DeletePoolAsync(pool.Id);
            _successMessage = "Pool deleted successfully";
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error deleting pool: {ex.Message}";
        }
    }

    private void ClearMessages()
    {
        _errorMessage = null;
        _successMessage = null;
    }

    private static string FormatLeaseTime(int seconds)
    {
        if (seconds >= 86400)
            return $"{seconds / 86400}d";
        if (seconds >= 3600)
            return $"{seconds / 3600}h";
        return $"{seconds / 60}m";
    }

